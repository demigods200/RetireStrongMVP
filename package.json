{
  "name": "retire-strong",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered wellness platform for adults 50+",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter web dev & pnpm --filter api-gateway dev",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api-gateway dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "cdk:deploy": "pnpm --filter infra-cdk run deploy:aws",
    "cdk:diff": "pnpm --filter infra-cdk diff",
    "cdk:synth": "pnpm --filter infra-cdk synth"
  },
  "devDependencies": {
    "@aws-sdk/credential-providers": "^3.478.0",
    "@opensearch-project/opensearch": "^2.6.0",
    "@types/node": "^20.18.0",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.1",
    "openai": "^6.15.0",
    "tsx": "^4.7.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=20.18.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "dependencies": {
    "@retire-strong/content-rag": "workspace:^",
    "youtube-transcript": "^1.2.1"
  }
}
